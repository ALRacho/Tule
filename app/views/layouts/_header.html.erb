<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to(t("index.Tule"), root_path, id: "logo")%>
      <nav>
        <ul class="nav pull-right">
          <li><%= link_to(t("index.Home"), root_path) %></li>
          <li><%= link_to(t("index.Help"), help_path) %></li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.name%> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to(t("index.Profile"), current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to(t("index.Sign_out"), signout_path, method: "delete") %>
